<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <p>Invoice sent to <%= @order.email %></p>
    <h4>Order Summary:</h4>

    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% show_order.each do |element| %>
        <%= puts "html order: #{show_order[0][:product].name}" %>
          <%= render 'line_item' %>
          <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            $ <%= @order.total_cents / 100 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  </div>

</section>
